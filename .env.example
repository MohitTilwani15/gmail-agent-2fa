# API authentication (for programmatic API access)
API_KEY=your-secret-api-key

# Dashboard login password (for web UI)
DASHBOARD_PASSWORD=your-dashboard-password

# Session secret (optional - random generated if not provided)
# SESSION_SECRET=your-session-secret

# Telegram (base URL for per-user webhook registration, e.g. https://your-domain.com)
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_SECRET=random-secret-for-webhook-verification

# Google OAuth2
GMAIL_CLIENT_ID=your-google-client-id
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
# Gmail refresh tokens are stored per-user in the database

# Server
PORT=3000

# Database path (optional - defaults to ./data.db)
# DB_PATH=/path/to/data.db

# Rate limiting (optional)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# Cleanup old resolved requests after N days (optional - default 30)
# CLEANUP_DAYS=30

# Session expiry in hours (optional - default 24)
# SESSION_EXPIRY_HOURS=24
